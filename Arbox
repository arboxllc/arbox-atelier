<script>
function toggleSearch() {
  const overlay = document.getElementById('search-overlay');
  overlay.style.display = overlay.style.display === 'none' ? 'block' : 'none';
  if (overlay.style.display === 'block') {
    overlay.querySelector('input').focus();
  }
}
</script>
