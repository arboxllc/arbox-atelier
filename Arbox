<script>
function toggleFilters() {
  const sidebar = document.getElementById('filter-sidebar');
  sidebar.style.display = sidebar.style.display === 'none' ? 'block' : 'none';
  document.body.style.overflow = sidebar.style.display === 'block' ? 'hidden' : '';
}
</script>
